@import 'nib'
@import 'common-variables'

/* Smartphones (portrait and landscape) ----------- */
@media only screen and (min-device-width: 320px) and (max-device-width: 480px) {

    body {
        border-top-width 10px !important

        .content-wrapper {
            box-sizing border-box
            width 100% !important
            padding 0 20px
            font-size 16px

            .language-options  {
                width 243px !important

                li  {
                    width 80px !important
                    font-size 0.8em !important

                    .languageButton  {
                        padding 3px 8px !important
                    }
                }
            }

            .moreLanguages {
                width 37px !important
                padding 5px
            }

            .language-modal {
                .modal-wrapper {
                    .content-wrapper {
                        padding-top 0

                        .language-options {
                            width 100% !important
                            max-height 248px
                            overflow scroll
                            margin 0 auto !important
                            padding-top 30px

                            li {
                                font-size 0.6em !important
                                width 25% !important

                                .languageButton {
                                    padding 3px 6px !important

                                    &:hover {
                                        border-color transparent
                                    }
                                }
                            }
                        }

                        a {
                            font-size 1em
                        }
                    }
                }
            }

            img.logo {
                height initial
                margin auto
            }

            h2.slogan {
                font-size 1.4em
                margin-bottom 1em
            }

            p {
                font-size 1em !important
                font-weight 100
                margin-top 20px
                display none

                &.mobile-text {
                    margin-top 20px !important
                    display block !important
                    clear both
                }
            }

            button {
                &#submit, &#contact, &#volunteer {
                    clear both
                    font-size 1em
                    width 100%
                    margin 0 0 2px 0

                    &:hover {
                        background $wikitonguesBlue !important
                    }
                }

                &#volunteer {
                    margin 0
                }

            }

            #social-media {
                display inline-block
                margin 40px 0 5px 0

                li {
                    margin 0 !important
                    width 20%
                    float left

                    a {
                        display inline-block

                        &:hover {
                            &.youtube {
                                img {
                                    background #B12324
                                }
                            }

                            &.facebook {
                                img {
                                    background #3B59B7
                                }
                            }

                            &.twitter {
                                img {
                                    background #5C90CB
                                }
                            }

                            &.tumblr {
                                img {
                                    background #1E295B
                                }
                            }

                            &.instagram {
                                img {
                                    background #3F729B
                                }
                            }
                        }
                    }
                }
            }
        }

        footer {
            .content-wrapper {
                margin 0

                .copyright {
                    margin-bottom 1.5em

                    p {
                        display block
                        font-size 1.2em
                        font-weight 100
                        margin 0 0 0.8em 0

                        &:first-of-type {
                            font-size 1.4em

                            img {
                                height 29px
                                margin 0 3px -7px 5px
                            }
                        }
                    }
                }

                .links {
                    width 100%
                    margin-bottom 2em

                    ul {
                        margin 0
                        font-size 0.7em
                        float left

                        &:last-of-type {
                            float right
                        }

                        li {
                            line-height 1.9em
                        }
                    }
                }
            }
        }

        #overlay {
            form {
                &#contact-form, &#volunteer-form, &#submit-form {
                    width 100% !important
                    box-sizing border-box

                    h1 {
                        padding 0 0 10px 0 !important
                    }

                    .close {
                        padding 0 !important
                    }

                    input, textarea, p, label {
                        border-radius 0
                        background #fff
                        font-size 0.7em
                        border-top none
                        border-bottom 1px solid #eaeaea
                        margin 0
                        padding 15px 7px !important
                    }

                    label {
                        input {
                            padding 0 20px 0 0 !important
                        }
                    }

                    #message {
                        border-bottom none
                        min-height 160px !important
                        height 160px
                    }
                }
            }
        }
    }
}

