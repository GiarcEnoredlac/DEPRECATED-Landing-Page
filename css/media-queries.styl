
/* Smartphones (portrait and landscape) ----------- */
@media only screen and (min-device-width : 320px) and (max-device-width : 480px) {
    .content-wrapper{
        box-sizing: border-box;
        width:100%;
        padding: 0 20px;
        font-size: 16px;

        .language-options{
            display:none;
        }

        h1{
            margin-top: 10px;
            font-size: 2.5em;
        }

        h4{
            font-size: 1.5em;
            font-weight: 400;
            margin-top:20px;
        }

        p{
            font-size: 1em;
            font-weight: 100;
            margin-top:20px;
            display:none;

            &.mobile-text{
                margin-top:0;
                display:block;
            }
        }

        #get-involved{
            margin: 20px 0;
            font-size: 2em;
        }

        #social-media{
            display:inline-block;
            margin: 5px 0 5px 0;

            li{
                margin: 0 0 10px 0;
                width: 20%;
                float: left;

                &:last-of-type{
                    margin-right:0;
                }

                a{
                    display: inline-block;
                }
            }
        }
    }

    footer{
        .content-wrapper{
            p{
                display: block;
                font-size: 1em;
                font-weight: 100;
                margin: 0;

                &:last-of-type{
                    font-size: .8em;
                    margin-top: 20px;
                }
            }
        }
    }

    #overlay{
        font-size: 16px;

        #contact-form{
            width:100%;

            input, textarea{
                border-radius: 0;
                background:#fff;
                box-sizing:border-box;
                font-size:1em;
                border-top:none;
                border-bottom:1px solid #eaeaea;
                margin:0;
            }

            textarea{
                height:220px;
            }
        }
    }
}

