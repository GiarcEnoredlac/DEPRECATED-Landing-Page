@import 'nib'
@import 'common-variables'

.menu {
  float right
  width 25%
  font-size 1.3em
  font-weight 700
  display inline-block
  margin-top 128px
  text-transform uppercase
  line-height 2em

  p {
    font-size 2em
  }

  li {
    margin-bottom 1em

    a.link {
      text-decoration none
      color $wikitonguesBlue
      transition color $transitionTime ease-in-out

      &:hover {
        color $hoverColor
        transition color $transitionTime ease-in-out
      }
    }
  }
}

.content {
  width 70%
  display inline-block
  font-size 2em
  min-height 1024px

  h1.header {
    text-align center
    border-bottom 1px solid #ddd
    padding-bottom 1em
  }

  .page-content {
    ol {
      font-size 1em
      line-height 1.6em
      margin-bottom 2em
      list-style-position inside

      &:first-of-type {
        font-size 0.8em
      }

      &.disc {
        list-style-type disc
      }

      li {
        margin-bottom 1em

        h2 {
          margin 2em 0
          font-size 1em
        }

        a.link {
          text-decoration none
          color lighten($wikitonguesBlue, 70%)
          transition color $transitionTime ease-in-out

          &:hover {
            color $hoverColor
            transition color $transitionTime ease-in-out
          }
        }
      }

      ol {
        padding-left 0
        font-size .8em
        li {
          margin-bottom 1em
          list-style-type decimal
          list-style-position inside
        }
      }
    }
  }
}