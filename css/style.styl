@import 'nib'
@import 'common-variables'

html,
button,
input,
select,
textarea {
    color $wikitonguesBlue
    font-family 'Open Sans', sans-serif
    font-weight 100
}

::-moz-selection {
    background $selectColor
    color #fff
    text-shadow none
}

::selection {
    background $selectColor
    color #fff
    text-shadow none
}

html {
    font-size 62.5%
    line-height 1.4
    background darken($wikitonguesBlue,15%)
}

body {
    color $wikitonguesBlue
    background #fafafa
    text-shadow 1px 1px 0 #fff
    border-top 20px solid $wikitonguesBlue
    transition all $transitionTime ease-in-out

    ul {
        padding 0
        margin 0

        li {
            list-style-type none
            display inline-block
        }
    }

    .content-wrapper {
        width 1280px
        margin 15px auto 0 auto
    }
}

footer {
    width 100%
    background $wikitonguesBlue
    padding 30px 0 50px 0
    clear both
    display inline-block

    .content-wrapper {
        overflow auto

        .copyright, ul li, ul li a {
            margin 0
            clear both
            text-shadow none
            color #889197
            line-height 22.5px

            &:hover {
                color $hoverColor
                transition color $transitionTime ease-in-out
            }
        }

        .copyright {
            display inline-block
            p{
                margin 0
                line-height 22.5px
                clear both
                float left
                font-size 1.5em
            }
        }

        img {
            border-radius 100%
            height 20px
            margin 0 3px -4px 5px
        }

        .links {
            float right

            ul {
                float left
                margin 0 0 0 50px

                li {
                    font-size 1.3em
                    clear both
                    display block

                    &.header {
                        color: #fff
                        text-shadow none
                    }

                    a {
                        cursor pointer
                        text-decoration none
                    }
                }
            }
        }
    }
}

@media screen and (max-width: 1450px) {
    .content-wrapper {
        width 90% !important
    }
}

button {
    border none

    &:focus {
        outline none
    }
}

.rtl {
    direction rtl!important
    float right !important

    li {
        float right !important
    }
}