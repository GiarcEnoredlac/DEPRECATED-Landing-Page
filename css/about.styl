@import 'common-variables'

body {
	&.about {
		.logo {
			width 100%
			height 250px
			margin 50px auto 0
			padding 25px 0
			-webkit-box-sizing border-box
			-moz-box-sizing border-box
			box-sizing border-box
		}

		.content {
			color $wikitonguesBlue
			width 100%
			padding-bottom 150px
		}

		h1.header {
			margin-top 0
			padding 1em 0 0 0
			border none
		}


		button.volunteer {
			font-weight bold
			background none
			padding 0

			&:hover {
				color lighten($wikitonguesBlue, 20%)
			}
		}

		h2 {
			margin-top 60px
			text-align center
			padding-bottom .5em
			margin-bottom 10px
		}

		#volunteers-list {
			width 100%

			li {
				width 24%
				margin  0 0 60px 0
				vertical-align top

				img {
					border-radius $radius
					width 100%
					margin-bottom 15px
				}

				span {
					font-size .9em

					&.italic {
						font-style italic
						margin-left -2px

						a {
							color $wikitonguesBlue
							text-decoration none
						}
					}
				}
			}
		}
	}
}