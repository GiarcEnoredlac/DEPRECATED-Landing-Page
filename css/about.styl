@import 'common-variables'

body {
	&.about {
		.logo {
			width 100%
			height 250px
			margin 50px auto 0
			padding 25px 0
			-webkit-box-sizing border-box
			-moz-box-sizing border-box
			box-sizing border-box
		}

		.content {
			color $wikitonguesBlue
			width 100%
			padding-bottom 150px
		}

		h1.header {
			margin-top 0
			padding 1em 0 0 0
			border none
		}


		button.volunteer {
			font-weight bold
			background none
			padding 0
		}


		button.volunteer:hover {
			text-decoration underline
		}

		h2 {
			margin-top 60px
			text-align center
			padding-bottom .5em
			border-bottom 1px solid #ccc
		}

		#volunteers-list {
			li {
				width 316px
				margin  0 0 60px 0
				vertical-align top
			}

			img {
				width inherit
				margin-bottom 15px
			}

			span {
				font-size .9em
			}
			
			.italic {
				font-style italic
					
				a {
					color #11242f
					text-decoration none
					
					&:hover {
						cursor help
						text-decoration underline
					}
				}	
			}
		}
	}
}