@import 'nib'
@import 'common-variables'

nav {
    background-color lighten($wikitonguesBlue, 95%)
    float left
    display inline-block
    width 100%

    ul {
        float left
        li {
            a {
                color #000
                font-size 1.5em
                display inline-block
                padding 20px
            }
        }
    }
}

.sample-videos {
    display none

    h1 {
        padding 40px
    }

    ul {
        width 100%
        display inline-block
        overflow hidden

        li {
            float left
            display inline-block
            width 25%

            a {
                width 100%
                img {
                    width inherit
                    float left
                }
            }
        }
    }
}

.content-wrapper {
    overflow auto
    .app {
        .weeklytongue {
            a {
                h1 {
                    font-weight 100
                }
            }

            .about, .phrasebook, .misc {
                font-size 1.4em
                line-height 1.5em
                width 60%
                float left
                padding 0 60px 0 20px
                font-style initial
            }

            .about {
                h2.language {
                    font-weight 100
                    padding 10px 20px
                    border-radius $radius
                    float left
                    background-color $wikitonguesBlue
                    color #fff
                    margin 10px 0
                }

                p {
                    width 100%
                    float left
                }

                span.language {
                    background-color $wikitonguesBlue
                    padding 5px 15px
                    border-radius $radius
                    color #fff
                    text-decoration none
                    font-style initial
                }
            }

            .phrasebook {
                padding 0
                background-color #fff
                margin auto
                border-radius $radius

                .phrasebook-header {
                    border-radius $radius $radius 0 0
                    width 100%
                    float left
                    display inline-block
                    padding 20px 40px
                    background-color lighten($wikitonguesBlue, 7%)
                    color #fff

                    a, p {
                        float left
                    }

                    p {
                        margin 0
                    }

                    a {
                        float right
                        color #fff
                        padding-right 3px

                        &:hover {
                            color $hoverColor
                        }
                    }
                }

                .language-options {
                    float left
                    width 100%

                    button {
                        width 50%
                        float left
                        padding 20px 0
                        background-color lighten($wikitonguesBlue, 80%)

                        &.translated {
                            background-color lighten($wikitonguesBlue, 90%)
                        }
                    }
                }

                ul {
                    width 100%
                    float left
                    margin-top 10px
                    padding 20px 70px

                    li {
                        width 100%
                        p {
                            clear both
                            display inline-block
                            padding 9px 20px
                            margin 5px 0
                            color #555

                            &.original {
                                float left
                                background-color lighten($wikitonguesBlue, 80%)
                                border-radius 26px 26px 26px 0
                            }

                            &.translated {
                                text-align right
                                float right
                                background-color lighten($wikitonguesBlue, 90%)
                                border-radius 26px 26px 0 26px
                            }
                        }
                    }
                }
            }

            .video {
                padding 30px
                width 40%
                float right
                height initial
                background-color transparent

                a {
                    margin-bottom 10px
                    display inline-block

                    img {
                        float left
                        width 100%
                        border-radius $radius

                        &:last-of-type {
                            margin-bottom 0
                        }
                    }
                }

                a.note {
                    width 100%
                    text-align center
                    padding 10px
                    float left
                }
            }
        }
    }
}