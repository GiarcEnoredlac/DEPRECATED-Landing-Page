@import 'nib'
@import 'common-variables'

.language-options {
    display none
    clear both
    float left
    display inline-block
    margin-bottom 20px
    height 38px
    overflow hidden

    li {
        font-size 1.5em
        float left
        width 113px

        .languageButton {
            background none
            padding 5px 10px
            font-weight  100
            height 38px
            border-bottom 2px solid transparent

            &.beta:after {
                content " BETA"
                color #DB0000
                font-size 1em
            }

            &.active {
                background $wikitonguesBlue
                color #fff
                border-radius $radius
            }

            &:hover {
                border-bottom 2px solid $wikitonguesBlue
            }
        }
    }
}

.language-modal {
    background none
    width 100%
    position fixed
    border-top 20px solid $wikitonguesBlue
    top 0
    left 0
    right 0
    bottom 0
    overflow hidden
    display none

    .modal-wrapper {
        border-bottom 1px solid #eee
        background #fafafa
        position absolute
        z-index 1
        width 100%

        .content-wrapper {
            overflow auto
            margin 0 auto
            padding-top 30px

            &.displayLanguageModal {
                margin-top 0!important
                transition margin-top $transitionTime ease-in-out
            }

            &.hideLanguageModal {
                margin-top -200px
                transition margin-top $transitionTime ease-in-out
            }

            .language-options {
                height auto
                margin 0 auto 15px auto
                display block
                width 100%

                li {
                    width 10%
                }
            }

            a {
                text-decoration none
                color #DB0000
                font-size 1.5em
                font-weight 100
                margin auto
                display block
                text-align center
                clear both
                padding 15px
                border-top 1px solid #eee

                &:hover {
                    background #eee
                    text-shadow none
                }
            }
        }
    }

    .background {
        display none
        background $wikitonguesBlue
        opacity 0.97
        position absolute
        bottom 0
        top 0
        left 0
        right 0
        display none
        cursor pointer
    }
}

.moreLanguages {
    border-radius $radius
    width 113px
    height 38px
    float right
    border-bottom 2px solid $wikitonguesBlue
    font-size 1.5em
    background-color  $wikitonguesBlue
    color #fff
    padding 5px 13px
}