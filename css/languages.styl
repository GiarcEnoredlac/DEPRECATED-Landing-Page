@import 'nib'
@import 'common-variables'

.language-selection {
    display inline-block
    float right

    &.rtl {
        float left !important

        &:hover {
            .language-options {
                margin-left 0
                transition margin-left $transitionTime ease-in-out

                li {
                    .languageButton.activeLanguage {
                        border-radius 0 $radius $radius 0
                    }
                }
            }
        }
    }

    &:hover {
        .language-options {
            margin-right 0
            transition margin-right $transitionTime ease-in-out

            li {
                .languageButton.activeLanguage {
                    border-radius $radius 0 0 $radius
                }
            }
        }
        .moreLanguages {
            background-color #668797
            transition background-color $transitionTime ease-in-out
        }
    }

    .language-options {
        display none
        clear both
        float left
        display inline-block
        height 38px
        overflow hidden
        margin-right -43px
        position relative
        transition margin-right $transitionTime ease-in-out

        &.rtl {
            margin-right 0
            margin-left -43px
            transition margin-left $transitionTime ease-in-out
        }

        li {
            font-size 1.5em
            float right
            width 113px

            &.rtl {
                float left !important

                .activeLanguage {
                    border-radius $radius
                }
            }

            .languageButton {
                width 100%
                background none
                padding 5px 10px
                font-weight  100
                height 38px
                border-bottom 2px solid transparent

                &.beta:after {
                    content " BETA"
                    color #DB0000
                    font-size 1em
                }

                &.activeLanguage {
                    background $wikitonguesBlue
                    color #fff
                    border-radius $radius
                    transition background $transitionTime ease-in-out
                }
            }
        }
    }
}

.language-modal {
    background none
    width 100%
    position fixed
    border-top 20px solid $wikitonguesBlue
    top 0
    left 0
    right 0
    bottom 0
    overflow hidden
    display none

    .modal-wrapper {
        border-bottom 1px solid #eee
        background #fafafa
        position absolute
        z-index 1
        width 100%

        .content-wrapper {
            overflow auto
            margin 0 auto
            padding-top 30px

            &.displayLanguageModal {
                margin-top 0!important
                transition margin-top $transitionTime ease-in-out
            }

            &.hideLanguageModal {
                margin-top -200px
                transition margin-top $transitionTime ease-in-out
            }

            .language-options {
                height auto
                margin 0 auto 15px auto
                display block
                width 100%

                li {
                    float left
                    width 10%

                    button {
                        &.active {
                           background $wikitonguesBlue
                           color #fff
                        }

                        &:hover {
                            border-bottom 2px solid $wikitonguesBlue
                        }
                    }
                }
            }

            a {
                text-decoration none
                color #DB0000
                font-size 1.5em
                font-weight 100
                margin auto
                display block
                text-align center
                clear both
                padding 15px
                border-top 1px solid #eee
                transition background $transitionTime ease-in-out

                &:hover {
                    background lighten($wikitonguesBlue,95%)
                    border-top 1px solid lighten($wikitonguesBlue,90%)
                    transition background $transitionTime ease-in-out
                    text-shadow none
                }
            }
        }
    }

    .background {
        display none
        background $wikitonguesBlue
        opacity 0.97
        position absolute
        bottom 0
        top 0
        left 0
        right 0
        display none
        cursor pointer
    }
}

.moreLanguages {
    border-radius 0 $radius $radius 0
    width 43px
    height 38px
    float right
    font-size 1.5em
    background-color $wikitonguesBlue
    color #fff
    padding 5px 13px
    transition background $transitionTime ease-in-out

    &.rtl {
        border-radius $radius 0 0 $radius
    }
}