@import 'nib'
@import 'common-variables'

.logo {
    width 100%
    height 250px
    margin 0 auto 50px auto
    padding 25px 0
    box-sizing border-box
}

.logotype {
    float left
    width 100%
    margin -0 0 20px 0
    font-weight 800
    font-size 2.7em
    line-height 1em
    font-family 'Raleway', sans-serif
}

.slogan {
    margin 0
    font-weight bold
    font-size 5em

    .no-wrap {
        white-space nowrap
    }
}

p {
    font-size 3.2em
    padding-left 0px
    margin-bottom 40px
    margin-top 10px
    font-weight 100

    &.mobile-text {
        display none
    }
}

#submit, #contact, #volunteer {
    border-radius $radius
    &:not(:last-of-type){
        margin-right 2%
    }

    display block
    background $wikitonguesBlue
    color #fff
    font-size 2.9em
    font-weight 800
    padding 20px 0
    width 32%
    margin 0 0 40px 0
    border none
    float left
    transition background $transitionTime ease-in-out

    &:hover {
        background $hoverColor
    }

    &:focus {
        outline none
    }
}

#social-media {
    margin 0 0 80px
    width 100%
    display inline-block
    clear both

    li {
        margin 0
        width 20%
        display inline-block
        float left

        a {
            display block
            transition background $transitionTime ease-in-out

            img {
                width 100%
                height auto
            }

            &.youtube {
                img {
                    border-radius $radius 0 0 $radius
                    background #B12324
                }
            }

            &.facebook {
                img {
                    background #3B59B7
                }
            }

            &.twitter {
                img {
                    background #5C90CB
                }
            }

            &.tumblr {
                img {
                    background #1E295B
                }
            }

            &.instagram {
                img {
                    border-radius 0 $radius $radius 0
                    background #3F729B
                }
            }
        }

        &:hover {
            a {
                img {
                    transition background $transitionTime ease-in-out
                    background $hoverColor
                }
            }
        }
    }
}